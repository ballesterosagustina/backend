<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <h1 class="text-center">Lista de usuarios</h1>

  <div class="d-flex justify-content-center mt-5 ">
    <form class="w-50" action="/productos" method="post">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Nombre</label>
        <input name="title" type="text" class="form-control" aria-describedby="emailHelp"
          placeholder="Agrega el nombre del producto" required>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Precio</label>
        <input name="price" type="number" class="form-control" required placeholder="Agrega el valor del producto">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Miniatura</label>
        <input name="thumbnail" type="text" class="form-control" required
          placeholder="Agrega link de la miniatura del producto">
      </div>

      <button type="submit" class="btn btn-primary">Agregar</button>
      <!-- boton que redirija a listar productos -->
      <a href="/productos" class="btn btn-primary">Listar productos</a>

    </form>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous">
  </script>
</body>

</html>